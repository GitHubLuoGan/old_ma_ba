<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="52dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/hucn_download_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hucn_download_btn" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:id="@+id/hucn_download_count_tv"
        android:background="@drawable/hucn_count_tip"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-30dp"
        android:paddingBottom="1dp"
        android:layout_alignTop="@+id/hucn_download_btn"
        android:layout_alignRight="@+id/hucn_download_btn"
        android:textSize="@dimen/hucn_small_text_size1" />

</RelativeLayout>