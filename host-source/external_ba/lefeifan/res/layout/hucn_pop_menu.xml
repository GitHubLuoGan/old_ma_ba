<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hucn_pop_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/hucn_pop_menu_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hucn_menu_layout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/hucn_pop_menu4"
            style="@style/HUCNMenuBtn"
            android:layout_marginTop="20dp"
            android:text="@string/hucn_setting_menu44" />

        <Button
            android:id="@+id/hucn_pop_menu1"
            style="@style/HUCNMenuBtn"
            android:text="@string/hucn_setting_menu11" />

        <Button
            android:id="@+id/hucn_pop_menu2"
            style="@style/HUCNMenuBtn"
            android:text="@string/hucn_setting_menu22" />

        <Button
            android:id="@+id/hucn_pop_menu3"
            style="@style/HUCNMenuBtn"
            android:text="@string/hucn_setting_menu33" />

        <Button
            android:id="@+id/hucn_pop_menu5"
            style="@style/HUCNMenuBtn"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:text="@string/hucn_cancle"
            android:textColor="#d13d3d" />
    </LinearLayout>

</RelativeLayout>