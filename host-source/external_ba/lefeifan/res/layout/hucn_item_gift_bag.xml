<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hucn_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_gift_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hucn_list_selector_bg"
        android:paddingBottom="8dip"
        android:paddingLeft="10dip"
        android:paddingTop="8dip" >

        <ImageView
            android:id="@+id/item_gift_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#c2c2c2"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/item_gift_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/item_gift_image"
            android:textColor="@color/hucn_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_gift_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/item_gift_image"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/hucn_download_arrow_tv"
            android:textColor="@color/hucn_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hucn_download_arrow_tv"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="45dp"
            android:layout_toLeftOf="@+id/hucn_download_btn_layout"
            android:background="@drawable/hucn_unfold" />

        <LinearLayout
            android:id="@+id/hucn_download_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/hucn_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/hucn_blue_btn"
                android:minWidth="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="复制兑换码"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/hucn_bg" />

    <LinearLayout
        android:id="@+id/gift_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hucn_text_color"
                android:text="礼包内容"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gift_list_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hucn_text_color"
                android:text="礼包内容"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/hucn_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hucn_text_color"
                android:text="使用方法"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gift_list_usage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hucn_text_color"
                android:text="使用方法"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/hucn_bg" />
    </LinearLayout>

</LinearLayout>