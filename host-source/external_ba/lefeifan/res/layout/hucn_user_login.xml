<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HUCNBg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/HUCNLoginLyout"
            android:background="@drawable/hucn_white_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/hucn_account_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/hucn_login_layout_padding" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_account" />

                <LinearLayout
                    android:id="@+id/hucn_login_l1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hucn_login_l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/hucn_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:layout_marginLeft="@dimen/hucn_login_layout_padding"
                android:layout_marginRight="@dimen/hucn_login_layout_padding"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_password" />

                <LinearLayout
                    android:id="@+id/hucn_login_l3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/hucn_autologin_box"
                style="@style/HUCNSmallText"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/hucn_login_margin_left"
                android:layout_marginTop="5dp"
                android:button="@drawable/hucn_radion_btn_selected"
                android:checked="true"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="@string/hucn_remember_password" />

            <TextView
                android:id="@+id/tv_forget_pwd"
                style="@style/HUCNSmallText"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/hucn_login_margin_left"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/hucn_login_forget_pwd"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/hucn_forget_pwd" />
        </RelativeLayout>

        <LinearLayout
            style="@style/HUCNLoginLyout"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/hucn_user_register_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/hucn_btn_submit"
                android:text="@string/hucn_register"
                android:textColor="@drawable/hucn_btn_text_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/hucn_user_login_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1.0"
                android:background="@drawable/hucn_btn_login"
                android:text="@string/hucn_login"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/hucn_qq_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/hucn_text_color"
            android:textSize="@dimen/hucn_small_text_size" />

        <TextView
            android:id="@+id/hucn_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/hucn_text_color"
            android:textSize="@dimen/hucn_small_text_size" />

        <LinearLayout
            style="@style/HUCNLoginLyout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hucn_sina_login_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:textColor="@color/hucn_text_color"
                android:textSize="@dimen/hucn_default_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hucn_qq_login_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="QQ登录"
                android:textColor="@color/hucn_text_color"
                android:textSize="@dimen/hucn_default_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/hucn_ad_recommend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>