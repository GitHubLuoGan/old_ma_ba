<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/hucn_ivNotification"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:contentDescription="@null"
        android:scaleType="center" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hucn_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#858587"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/hucn_pbNotification"
            style="@style/HUCNProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/hucn_tvTitle"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:progress="100" />

        <TextView
            android:id="@+id/hucn_tvTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hucn_tvTitle"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/hucn_tvTitle"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#858587" />
    </RelativeLayout>

</LinearLayout>