<?xml version="1.0" encoding="utf-8"?>
<!-- 充值金额选择Itme -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hucn_recharg_select_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hucn_btn_recharge_cebter_select_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/hucn_recharg_select_image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/hucn_bg" />

        <TextView
            android:id="@+id/hucn_recharg_select_name"
            style="@style/HUCNText"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/hucn_small_text_size"
            android:textColor="@color/hucn_light_gray_"
            />
    </LinearLayout>

</LinearLayout>