<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@color/findps_gray">
        
        <ImageView 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/findicon"/>
        <com.sjyxsdk.app.AutoMarquee 
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/sectop_text"
            android:textColor="@color/orage"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:marqueeRepeatLimit= "marquee_forever"
        	android:focusableInTouchMode="true"
        	android:scrollHorizontally= "true"
            android:textSize="12sp"/>
     </LinearLayout>
     <RelativeLayout
         android:id="@+id/seclinear_one"
         android:layout_width="320dp"
         android:layout_height="30dp"
         android:background="@drawable/findps_tip_style"
         android:layout_marginTop="5dp">
        
         <TextView
             android:layout_centerVertical="true"
             android:id="@+id/first_user"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:paddingLeft="5dp"
             android:singleLine="true"
             android:ellipsize="end"
             android:textColor="@color/gray"/>

         <ImageView
             android:id="@+id/first_right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:visibility="invisible"
             android:src="@drawable/right" />
         
     </RelativeLayout>
     
     <RelativeLayout
         android:id="@+id/seclinear_two"
         android:layout_width="320dp"
         android:layout_height="30dp"
         android:background="@drawable/findps_tip_style"
         android:visibility="invisible"
         android:layout_marginTop="5dp">
        
         <TextView
             android:layout_centerVertical="true" 
             android:id="@+id/second_user"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:paddingLeft="5dp"
             android:singleLine="true"
             android:ellipsize="end"
             android:textColor="@color/gray"/>

         <ImageView
             android:id="@+id/second_right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:src="@drawable/right" 
             android:visibility="invisible"/>
         
     </RelativeLayout>
     
     <RelativeLayout
         android:id="@+id/seclinear_three"
         android:layout_width="320dp"
         android:layout_height="30dp"
         android:background="@drawable/findps_tip_style"
         android:visibility="invisible"
         android:layout_marginTop="5dp">
        
         <TextView 
             android:layout_centerVertical="true"
             android:id="@+id/third_user"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:paddingLeft="5dp"
             android:singleLine="true"
             android:ellipsize="end"
             android:textColor="@color/gray"/>

         <ImageView
             android:id="@+id/third_right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="10dp"
             android:src="@drawable/right" 
             android:visibility="invisible"/>
         
     </RelativeLayout>
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="30dp"
         android:layout_marginTop="5dp"
         android:gravity="center_horizontal"
         android:orientation="horizontal">
         
         <Button 
             android:id="@+id/login"
             android:layout_width="155dp"
             android:layout_height="30dp"
             android:text="@string/login_button"
             android:textSize="15sp"
             android:textColor="@color/gray_black"
             android:background="@drawable/greenbtn_style"/>
         
          <Button 
             android:id="@+id/other_login"
             android:layout_width="155dp"
             android:layout_height="30dp"
             android:text="@string/other_button"
             android:textSize="15sp"
             android:layout_marginLeft="10dp"
             android:textColor="@color/gray_black"
             android:background="@drawable/graybtn_style"/>
         
     </LinearLayout>
     
     <LinearLayout 
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/laba" 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:src="@drawable/laba"/>
            
            <com.sjyxsdk.app.AutoMarquee 
	 		    android:gravity="center_vertical"
	 		    android:id="@+id/autotext"
	 		    android:layout_width="match_parent"
	 		    android:layout_height="18dp"
	 		    android:ellipsize="marquee"
	 		    android:textColor="#2081cd"
	 		    android:textSize="15sp"
	 		    android:layout_marginLeft="5dp"
	 		    android:singleLine="true"/>
            
        </LinearLayout>

</LinearLayout>
