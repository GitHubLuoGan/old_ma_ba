<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_recharge_records">    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/start"
        android:orientation="horizontal">        
        <Button 
            android:id="@+id/preview"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/recharge_button_style"
            android:text="@string/back"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize"
            android:layout_marginLeft="5dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title_size"
            android:layout_centerInParent="true"/>       
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">       
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/leftbankground"
	        android:orientation="vertical">
	        
	        <Button 
	            android:id="@+id/total_records"
	            android:layout_height="45dp"
	            android:layout_width="match_parent"
	            android:gravity="center"
	            android:text="@string/view_one"
	            android:textSize="@dimen/textsize_one"
	            android:background="@drawable/recharge_button_background"
	            android:textColor="@color/black"/>
	        <Button 
	            android:id="@+id/success_records"
	            android:layout_height="45dp"
	             android:layout_width="match_parent"
	            android:gravity="center"
	            android:textColor="@color/black"
	            android:textSize="@dimen/textsize_one"
	            android:background="@drawable/recharge_button_background"
	            android:text="@string/view_two"/>
	        <Button 
	            android:id="@+id/fail_records"
	            android:layout_height="45dp"
	             android:layout_width="match_parent"
	            android:gravity="center"
	            android:textColor="@color/black"
	            android:textSize="@dimen/textsize_one"
	            android:background="@drawable/recharge_button_background"
	            android:text="@string/view_three"/>        
	    </LinearLayout>
	    <FrameLayout 
	        android:id="@+id/framlayout"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="5"/>
 	</LinearLayout>
</LinearLayout>