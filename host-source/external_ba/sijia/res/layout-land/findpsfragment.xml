<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
	    android:id="@+id/linearlayout_two"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	    
	    <LinearLayout 
	        android:layout_width="350dp"
	        android:layout_height="30dp"
	        android:gravity="center"
	        android:background="@color/findps_gray">
	        
	        <ImageView 
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginLeft="10dp"
	            android:src="@drawable/findicon"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/findps_top"
	            android:textColor="@color/gray_black"
	            android:layout_marginLeft="5dp"
	            android:textSize="12sp"/>
	        
	        <Button
	            android:id="@+id/back" 
	            android:layout_width="40dp"
	            android:layout_height="20dp"
	            android:layout_marginLeft="10dp"
	            android:text="@string/back"
	            android:textSize="12sp"
	            android:textColor="@color/gray_black"
	            android:background="@drawable/graybtn_style"/>
	        
	    </LinearLayout>
	    <ScrollView 
	        android:layout_width="300dp"
	        android:layout_height="100dp"
	        android:layout_marginTop="5dp" 	        
	        android:background="@drawable/findps_tip_style">
	        
	        <TextView
		        android:gravity="center"		        
		        android:id="@+id/findpstext"
		        android:layout_width="300dp"
		        android:layout_height="100dp"
		        android:layout_gravity="center"
		        android:text="@string/findps_tips"
		        android:padding="5dp"
		        android:textColor="@color/gray_black"
		        android:lineSpacingExtra="1dp"/>
	        
	    </ScrollView>
	    
	    
	    <Button 
	        android:id="@+id/phone"
	        android:layout_marginTop="5dp"
	        android:layout_gravity="center"
	        android:layout_width="141dp"
	        android:layout_height="30dp"
	        android:text="@string/findps_phone"
	        android:textSize="12sp"
	        android:textColor="@color/gray_black"
	        android:paddingLeft="20dp"
	        android:background="@drawable/phone_style"/>
	    
	
	</LinearLayout>
</FrameLayout>
