<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="65dp"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/giftlist">
    <LinearLayout 
        android:id="@+id/image_one"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:layout_marginLeft="5dp">
         <ImageView
	        android:id="@+id/image"
	        android:layout_width="55dp"
	        android:layout_height="55dp"
	        android:src="@drawable/icon"/>
    </LinearLayout>
   

    <TextView
        android:id="@+id/gamename"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_one"
        android:layout_toRightOf="@+id/image_one"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_below="@+id/gamename"
        android:layout_toRightOf="@+id/image_one"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/orage"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_toRightOf="@+id/image_one"
        android:layout_marginLeft="5dp"
        android:textColor="@color/gray_black"
        android:textSize="13sp" />

    <Button
        android:id="@+id/take"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/greenbtn_style"
        android:text="@string/take"
        android:textSize="12sp"
        android:focusable="false"
        android:textColor="@color/black" />

</RelativeLayout>
