<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您确认要删除该任务吗？"
        android:textColor="@color/ac_common_black"
        android:textSize="@dimen/ac_common_large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ac_selector_remove_checkbox"
            android:button="@null" />

        <TextView
            android:id="@+id/check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:minHeight="20dip"
            android:minWidth="30dip"
            android:text="同时删除安装文件"
            android:textColor="@color/ac_common_gray_darker"
            android:textSize="@dimen/ac_common_medium" />
    </LinearLayout>

</LinearLayout>