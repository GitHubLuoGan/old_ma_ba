<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp" >

    <FrameLayout
        android:id="@+id/pay_layout_logo"
        android:layout_width="@dimen/ac_list_icon_width_and_height"
        android:layout_height="@dimen/ac_list_icon_width_and_height" >

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="@dimen/ac_list_icon_width_and_height"
            android:layout_height="@dimen/ac_list_icon_width_and_height"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/pay_tv_logo_cover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/ac_pay_icon_cover"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingTop="3dip"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/ac_common_small" />

    <FrameLayout
        android:id="@+id/pay_layout_download"
        android:layout_width="@dimen/ac_app_button_width"
        android:layout_height="30dp" >

        <ProgressBar
            android:id="@+id/app_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/ac_download_seekbar_green_style" />

        <com.kuyou.appcenter.widgets.MagicButton
            android:id="@+id/app_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/ac_common_transparent"
            android:gravity="center"
            android:textColor="@color/ac_common_white"
            android:textSize="@dimen/ac_common_medium" />

        <TextView
            android:id="@+id/pay_tv_cover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/ac_pay_icon_cover"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>