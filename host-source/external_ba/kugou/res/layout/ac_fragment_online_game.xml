<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/ac_common_background"
	>
	<com.kuyou.appcenter.widgets.TipsLayout
		android:id="@+id/tips_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"/>
	<com.kuyou.appcenter.widgets.ScrollListenerView 
	    android:id="@+id/scrollview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
		<LinearLayout 
		    android:id="@+id/linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical">
			<com.kuyou.appcenter.widgets.GridViewInScrollView 
				android:id="@+id/gridview"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:stretchMode="columnWidth"
			    android:numColumns="4"
			    android:listSelector="@color/ac_common_transparent"
			    android:visibility="gone"
			    android:gravity="center"/>
	    </LinearLayout>
	</com.kuyou.appcenter.widgets.ScrollListenerView>
</LinearLayout>