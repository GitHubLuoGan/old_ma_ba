<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:background="@drawable/library_common_dialog_title_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/library_common_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:paddingLeft="5dp"
        android:text="温馨提示"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/library_common_dialog_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        android:gravity="center"
        android:src="@drawable/library_user_center_tiltle_button" />

</LinearLayout>