<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:orientation="horizontal" >

    
    <LinearLayout 
        android:layout_width="63dip"
        android:layout_height="50dip"
        android:id="@+id/mzw_login_list_type_layout"
        >
    <ImageView 
        android:id="@+id/mzw_login_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dip"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/mzw_login_list_username"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="15dip"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/mzw_login_list_type_layout"
		android:textColor="@color/mzw_login_dialog_edit_text_color"
		android:paddingRight="55dip"
        android:textSize="@dimen/mzw_login_dialog_edit_text_size"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        >

        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/mzw_login_list_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mzw_sdk_login_delete_history" />
    </LinearLayout>

</RelativeLayout>