<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dpay_main_bg_color"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/dpay_rl_modify_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dpay_item_color"
            android:padding="@dimen/dpay_default_padding" >

            <TextView
                android:id="@+id/dpay_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dpay_username"
                android:textColor="@color/dpay_black" />

            <TextView
                android:id="@id/dpay_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpay_username"
                android:textColor="@color/dpay_red" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:drawablePadding="@dimen/dpay_default_padding"
                android:drawableRight="@drawable/dpay_categories_arrow"
                android:text="@string/dpay_modify_password"
                android:textColor="@color/dpay_hint_text_color"
                android:textSize="@dimen/dpay_prompt_font_size" />
        </RelativeLayout>

        <View
            android:id="@id/dpay_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dpay_line_height"
            android:background="@drawable/dpay_divider_line"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@id/dpay_rl_upgrade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dpay_item_color"
            android:padding="@dimen/dpay_default_padding"
            android:visibility="gone" >

            <TextView
                android:id="@+id/dpay_upgrade_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dpay_tv_upgrade"
                android:textColor="@color/dpay_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpay_upgrade_tv"
                android:text="@string/dpay_tv_upgrade_tips"
                android:textColor="@color/dpay_hint_text_color" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:drawablePadding="@dimen/dpay_default_padding"
                android:drawableRight="@drawable/dpay_categories_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dpay_line_height"
            android:background="@drawable/dpay_divider_line" />

        <RelativeLayout
            android:id="@id/dpay_rl_bind_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dpay_item_color"
            android:padding="@dimen/dpay_default_padding" >

            <TextView
                android:id="@+id/dpay_bind_mail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dpay_tv_bind_mail"
                android:textColor="@color/dpay_black" />

            <TextView
                android:id="@id/dpay_tv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpay_bind_mail_tv"
                android:text="@string/dpay_tv_mail_hint"
                android:textColor="@color/dpay_red" />

            <Button
                android:id="@id/dpay_btn_user_bind_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:drawablePadding="@dimen/dpay_default_padding"
                android:drawableRight="@drawable/dpay_categories_arrow"
                android:text="@string/dpay_tv_not_bind_mail"
                android:textColor="@color/dpay_hint_text_color"
                android:textSize="@dimen/dpay_prompt_font_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dpay_line_height"
            android:background="@drawable/dpay_divider_line" />

        <RelativeLayout
            android:id="@id/dpay_rl_recharge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dpay_item_color"
            android:clickable="true"
            android:padding="@dimen/dpay_default_padding" >

            <TextView
                android:id="@+id/dpay_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dpay_balance"
                android:textColor="@color/dpay_black" />

            <TextView
                android:id="@id/dpay_tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dpay_balance"
                android:textColor="@color/dpay_black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:drawablePadding="@dimen/dpay_default_padding"
                android:drawableRight="@drawable/dpay_categories_arrow"
                android:text="@string/dpay_recharge"
                android:textColor="@color/dpay_hint_text_color"
                android:textSize="@dimen/dpay_prompt_font_size"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dpay_line_height"
            android:background="@drawable/dpay_divider_line" />

        <Button
            android:id="@id/dpay_btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dpay_align_bottom"
            android:layout_marginTop="@dimen/dpay_align_parent_top"
            android:background="@drawable/dpay_logout"
            android:gravity="center"
            android:text="@string/dpay_logout"
            android:textColor="@color/dpay_white"
            android:textSize="@dimen/dpay_prompt_font_size" />
    </LinearLayout>

</ScrollView>