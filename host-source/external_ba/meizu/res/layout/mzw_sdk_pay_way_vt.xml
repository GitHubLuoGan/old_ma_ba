<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/mzw_pay_way_wwq"
         android:textColor="@color/mzw_pay_info_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alixPay"
            android:layout_width="139dp"
            android:layout_height="39dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/mzw_sdk_pay_btn_selector_test"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:tag="0"
            android:text="@string/mzw_alixpay_wwq"
            android:textColor="@color/mzw_pay_money_text_press" />

        <Button
          android:id="@+id/uniPay"
            android:layout_width="139dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:tag="1"
            android:textColor="@color/mzw_pay_money_text_press" 
            android:background="@drawable/mzw_sdk_pay_btn_selector_test"
             android:text="@string/mzw_yinlian_wwq" 
            />

        <Button
              android:id="@+id/creditCardPay"
            
            android:layout_width="139dp"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:tag="2"
            android:textColor="@color/mzw_pay_money_text_press" 
            android:background="@drawable/mzw_sdk_pay_btn_selector_test"
            android:text="@string/mzw_xinyong_wwq" 
           />
    </LinearLayout>

</LinearLayout>