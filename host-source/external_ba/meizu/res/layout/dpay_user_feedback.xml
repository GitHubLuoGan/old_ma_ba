<?xml version="1.0" encoding="utf-8"?>
<com.bodong.dpaysdk.ui.CompatibleScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dpay_main_bg_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dpay_align_bottom"
        android:paddingLeft="@dimen/dpay_default_padding"
        android:paddingRight="@dimen/dpay_default_padding"
        android:paddingTop="@dimen/dpay_align_parent_top" >

        <EditText
            android:id="@id/dpay_feedback_content"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:background="@drawable/dpay_input_circle_bg"
            android:gravity="left"
            android:hint="@string/dpay_feedback_content_hint"
            android:padding="@dimen/dpay_default_padding"
            android:textColor="@color/dpay_black"
            android:textColorHint="@color/dpay_hint_text_color"
            android:textSize="@dimen/dpay_subtitle_font_size"
            android:maxLength="500" />

        <EditText
            android:id="@id/dpay_feedback_contact"
            style="@style/dpay_edittext_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dpay_default_padding"
            android:hint="@string/dpay_feedback_contact" />
    </LinearLayout>

</com.bodong.dpaysdk.ui.CompatibleScrollView>