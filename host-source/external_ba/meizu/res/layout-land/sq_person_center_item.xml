<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sq_person_center_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sq_person_center_item_bg_selectior"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/sq_person_center_item_ic_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp" />

    <TextView
        android:id="@+id/sq_person_center_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="174dp"
        android:gravity="center_vertical"
        android:textColor="#ff414030"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/sq_person_center_item_ic_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="75dp" />

</RelativeLayout>
