<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/sq_person_center_item_bg_selectior"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="80dp"
    android:paddingRight="80dp" >

    <ImageView
        android:id="@+id/sq_person_wallet_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/sq_person_wallet_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/sq_person_wallet_icon"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:singleLine="true"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sq_person_wallet_tv_info"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sq_person_wallet_tv_input_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/sq_person_wallet_et_input"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:layout_marginLeft="8dp"
            android:background="@drawable/sq_login_et_bg"
            android:digits="0123456789"
            android:singleLine="true"
            android:textColorHint="#a6a6a6" />

        <TextView
            android:id="@+id/sq_person_wallet_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/sq_person_wallet_btn_ok"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/sq_person_wallet_btn_get"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>