<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sq_title_bar_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sq_title_bar_bg"
    android:padding="0dp" >

    <!-- 左按钮 -->

    <ImageButton
        android:id="@+id/sq_title_bar_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3.5dp"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="3.5dp"
        android:background="@drawable/sq_title_bar_backbtn" />

    <!-- 进度条 -->

    <ImageView
        android:id="@+id/sq_title_bar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/sq_logo" />

    <!-- 右按钮 -->

    <ImageButton
        android:id="@+id/sq_title_bar_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3.5dp"
        android:layout_marginRight="8dip"
        android:layout_marginTop="3.5dp"
        android:background="@drawable/sq_title_bar_submitbtn" />

</RelativeLayout>
