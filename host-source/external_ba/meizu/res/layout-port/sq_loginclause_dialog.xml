<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Theme.Black"
    android:background="@drawable/sq_login_clause_bg"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sq_login_clause_dialog_iv_close"
        android:src="@drawable/sq_login_btn_close"
        android:layout_gravity="right"
        android:layout_margin="3dp"
        />
    <ImageView
        android:id="@+id/sq_login_clause_dialog_iv_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/sq_login_clause_dialog_iv_title"
       android:layout_gravity="center_horizontal"
       android:layout_margin="5dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sq_login_bg_devider"
        />
    <ScrollView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
         android:layout_height="0dp"
       android:layout_weight="1.0"
        android:background="@drawable/sq_login_clause_content_bg"
        >
    <TextView
        android:id="@+id/sq_login_clause_dialog_tv_content"
       android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textColor="#fff"
       android:textSize="14dip"
        />
    </ScrollView>
    <Button
        android:layout_marginTop="4dp"
        android:id="@+id/sq_login_clause_dialog_btn_agree"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sq_login_btn_bg_selectior"
        android:textSize="18dip"
        />
</LinearLayout>
