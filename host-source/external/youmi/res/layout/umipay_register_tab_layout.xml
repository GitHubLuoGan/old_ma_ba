<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "@dimen/umipay_main_diglog_width"
              android:layout_height = "40dp"
              android:layout_marginBottom = "-2px"
              android:baselineAligned = "false"
              android:orientation = "horizontal" >

	<LinearLayout
			android:id = "@+id/umipay_login_tab"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_marginRight = "2dp"
			android:layout_weight = "1"
			android:background = "@null"
			android:paddingTop = "7dp" >

		<TextView
				android:id = "@+id/umipay_login_tab_tv"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:background = "@drawable/umipay_background_top_radius_pressed"
				android:clickable = "false"
				android:gravity = "center"
				android:text = "@string/umipay_login_game"
				android:textColor = "#313131"
				android:textSize = "16sp" />


	</LinearLayout >

	<LinearLayout
			android:id = "@+id/umipay_register_tab"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_marginLeft = "2dp"
			android:layout_weight = "1"
			android:background = "@drawable/umipay_background_top_radius"
			android:gravity = "center"
			android:paddingTop = "10dp" >

		<ImageView
				android:layout_width = "20dp"
				android:layout_height = "20dp"
				android:layout_margin = "3dp"
				android:clickable = "false"
				android:src = "@drawable/umipay_owan_logo" />

		<TextView
				android:id = "@+id/umipay_register_tab_tv"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:clickable = "false"
				android:gravity = "center"
				android:text = "@string/umipay_reg_game"
				android:textColor = "#5a5a5a"
				android:textSize = "16sp" />

	</LinearLayout >
</LinearLayout >