<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		android:id = "@+id/umipay_main_content_layout"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:layout_width = "@dimen/umipay_main_diglog_width"
		android:layout_height = "240dp"
		android:layout_gravity = "center_horizontal"
		android:background = "@drawable/umipay_background_bottom_radius" >

	<RelativeLayout
			android:id = "@+id/umipay_account_box_layout"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_centerHorizontal = "true"
			android:layout_marginLeft = "30dp"
			android:layout_marginRight = "30dp"
			android:layout_marginTop = "20dp" >

		<EditText
				android:id = "@+id/umipay_name_box"
				android:layout_width = "fill_parent"
				android:layout_height = "43dp"
				android:background = "@drawable/umipay_editbox_background"
				android:gravity = "center_vertical|left"
				android:hint = "@string/umipay_reg_name_hint"
				android:imeOptions = "flagNoExtractUi|actionNext"
				android:inputType = "textEmailAddress"
				android:maxLength = "40"
				android:paddingLeft = "35dp"
				android:singleLine = "true"
				android:textColor = "#434343"
				android:textColorHint = "#959595"
				android:textSize = "14sp" />


		<ImageView
				android:layout_width = "13dp"
				android:layout_height = "13dp"
				android:layout_centerVertical = "true"
				android:layout_marginLeft = "10dp"
				android:contentDescription = "@string/umipay_account_logo"
				android:src = "@drawable/umipay_account" />
	</RelativeLayout >

	<RelativeLayout
			android:id = "@+id/umipay_password_box_layout"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/umipay_account_box_layout"
			android:layout_centerHorizontal = "true"
			android:layout_marginLeft = "30dp"
			android:layout_marginRight = "30dp"
			android:layout_marginTop = "2dp" >

		<EditText
				android:id = "@+id/umipay_psw_box"
				android:layout_width = "fill_parent"
				android:layout_height = "43dp"
				android:background = "@drawable/umipay_editbox_background"
				android:gravity = "center_vertical|left"
				android:hint = "@string/umipay_reg_psw_hint"
				android:imeOptions = "flagNoExtractUi|actionNext"
				android:inputType = "textEmailAddress"
				android:maxLength = "40"
				android:paddingLeft = "35dp"
				android:singleLine = "true"
				android:textColor = "#434343"
				android:textColorHint = "#959595"
				android:textSize = "14sp" />


		<ImageView
				android:layout_width = "13dp"
				android:layout_height = "13dp"
				android:layout_centerVertical = "true"
				android:layout_marginLeft = "10dp"
				android:contentDescription = "@string/umipay_pw_logo"
				android:src = "@drawable/umipay_password" />

	</RelativeLayout >

	<RelativeLayout
			android:id = "@+id/umipay_phone_box_layout"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/umipay_password_box_layout"
			android:layout_centerHorizontal = "true"
			android:layout_marginLeft = "30dp"
			android:layout_marginRight = "30dp"
			android:layout_marginTop = "2dp" >

		<EditText
				android:id = "@+id/umipay_phone_box"
				android:layout_width = "fill_parent"
				android:layout_height = "43dp"
				android:background = "@drawable/umipay_editbox_background"
				android:digits = "0123456789"
				android:gravity = "center_vertical|left"
				android:hint = "@string/umipay_reg_phone_hint"
				android:imeOptions = "flagNoExtractUi|actionDone"
				android:inputType = "phone"
				android:maxLength = "40"
				android:paddingLeft = "35dp"
				android:singleLine = "true"
				android:textColor = "#434343"
				android:textColorHint = "#959595"
				android:textSize = "14sp" />


		<ImageView
				android:layout_width = "13dp"
				android:layout_height = "13dp"
				android:layout_centerVertical = "true"
				android:layout_marginLeft = "10dp"
				android:contentDescription = "@string/umipay_phone_logo"
				android:src = "@drawable/umipay_phone_icon" />
	</RelativeLayout >

	<LinearLayout
			android:id = "@+id/umipay_agreement"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/umipay_phone_box_layout"
			android:layout_marginLeft = "30dp"
			android:layout_marginTop = "1dp"
			android:background = "@drawable/umipay_layout_pressed" >

		<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:clickable = "false"
				android:singleLine = "true"
				android:text = "@string/umipay_register_agreement"
				android:textColor = "#999999"
				android:textSize = "12sp" />

		<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:clickable = "false"
				android:singleLine = "true"
				android:text = "@string/umipay_register_ouwan_ag"
				android:textColor = "#1badf6"
				android:textSize = "12sp" />
	</LinearLayout >

	<RelativeLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/umipay_phone_box_layout"
			android:layout_marginLeft = "30dp"
			android:layout_marginRight = "30dp"
			android:layout_marginTop = "20dp" >

		<LinearLayout
				android:id = "@+id/umipay_bind_phone_layout"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_centerVertical = "true"
				android:background = "@null"
				android:gravity = "center_vertical"
				android:orientation = "horizontal"
				android:padding = "4dp" >

			<CheckBox
					android:id = "@+id/umipay_bind_phone_cb"
					android:layout_width = "14dp"
					android:layout_height = "14dp"
					android:background = "@drawable/umipay_checkbox_default"
					android:button = "@null"
					android:checked = "true"
					android:clickable = "false" />

			<TextView
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginLeft = "3dp"
					android:clickable = "false"
					android:text = "@string/umipay_bind_phone"
					android:textColor = "#717171"
					android:textSize = "12sp" />
		</LinearLayout >

		<Button
				android:id = "@+id/umipay_register_btn"
				android:layout_width = "wrap_content"
				android:layout_height = "40dp"
				android:layout_alignParentRight = "true"
				android:layout_centerVertical = "true"
				android:background = "@drawable/umipay_btn_blue"
				android:paddingLeft = "25dp"
				android:paddingRight = "25dp"
				android:text = "@string/umipay_register"
				android:textColor = "#ffffff"
				android:textSize = "15sp" />
	</RelativeLayout >
</RelativeLayout >