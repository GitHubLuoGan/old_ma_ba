<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 定义mainframe中头部的样式 -->
    <style name="topbar">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item> 
        <item name="android:textSize">10sp</item>
    </style>

    <style name="radiobutton_logo" parent="topbar">
        <item name="android:background">@drawable/logo_style</item>
        <item name="android:padding">2dp</item>
    </style>
    
     <style name="radiobutton_logo_small" parent="topbar">
        <item name="android:background">@drawable/logo_style</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="radiobutton_center" parent="topbar">
        <item name="android:background">@drawable/center_style</item>
        <item name="android:padding">4dp</item>
    </style>
    
    <style name="radiobutton_more" parent="topbar">
        <item name="android:background">@drawable/more_style</item>
        <item name="android:padding">4dp</item>
    </style>
    
    <style name ="Transparent">
        <item name= "android:windowBackground">@color/transparent</item >
        <item name ="android:windowIsTranslucent">true</item>
        <item name= "android:windowAnimationStyle">@+android:style/Animation.Translucent </item >
    </style >
    
    <style name="Dialog" parent="@android:Theme.Dialog">         
		<item name="android:windowFrame">@null</item>         
		<item name="android:windowNoTitle">true</item>                
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowBackground">@color/transparent</item>         
		<item name="android:windowContentOverlay">@null</item>     
 	</style>
 	
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    
    <style name="MyRatingBar" parent ="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_style</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
    
    <style name="titlebackground">
        <item name="android:background">@color/blue_one</item>
    </style>
</resources>
