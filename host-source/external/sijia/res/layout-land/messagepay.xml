<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_recharge">
    
    <include 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        layout="@layout/myprogressbar"/>
    
    <LinearLayout
        android:id="@+id/messagemain"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
         android:visibility="gone"
        android:background="@drawable/graybtn_style">
        
        <TextView 
            android:id="@+id/payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/amount"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/blue_one"
            android:textSize="@dimen/textsize"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/goods"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/tf_sp"/>
            <TextView 
                android:id="@+id/goods"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/goods_number"
	            android:textColor="@color/red"
	            android:textSize="@dimen/tf_sp"/>
            <TextView 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/goods_price"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/tf_sp"/>
            
        </LinearLayout>
        
        <TextView 
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/user"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/tf_sp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/textview"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/textone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"/>       
    </LinearLayout>
    
    <LinearLayout 
		    android:id="@+id/spinner"
		    android:layout_width="220dp"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="horizontal"
		    android:visibility="gone"
		    android:layout_gravity="center_horizontal">
	            
	  	<TextView
		    android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:text="@string/server_user"
		    android:textSize="@dimen/textsize"/>
		        
		<Spinner
		    android:id="@+id/spinner_type"
		    android:paddingLeft="8dp" 
		    android:layout_width="155dp"
		    android:layout_height="29dp"
		    android:layout_marginLeft="5dp"
		    android:background="@drawable/spinner_style"/>	
	 </LinearLayout>
    

</LinearLayout>
