<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    
    <LinearLayout 
        android:id="@+id/one"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/white_bg_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_height="27dp"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/username"/>
        <EditText 
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:hint="@string/input_user"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/two"
        android:layout_below="@+id/one"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/white_bg_down"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_height="27dp"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/password"/>
        
        <EditText 
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:singleLine="true"
            android:digits="@string/xianzhi"
            android:hint="@string/input_ps"/>
                
    </LinearLayout>
    
    <Button 
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/two"
        android:layout_marginTop="5dp"
        android:text="@string/register_text"
        android:textSize="@dimen/te_sp"
        android:textColor="@color/gray_black"
        android:background="@drawable/greenbtn_style"/>
    
     <Button 
        android:id="@+id/back"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/register"
        android:layout_marginTop="5dp"
        android:text="@string/back"
        android:textSize="@dimen/te_sp"
        android:textColor="@color/gray_black"
        android:background="@drawable/graybtn_style"/>
    

</RelativeLayout>
