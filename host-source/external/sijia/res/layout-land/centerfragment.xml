<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical" >
    
     <LinearLayout 
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@color/findps_gray">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/center_text"
            android:textColor="@color/gray_black"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>        
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
            
	            <TextView 
	            	android:id="@+id/mainweb"
	            	android:layout_width="wrap_content"
	            	android:layout_height="20dp"
	            	android:textColor="@color/black"/>
		        <TextView 
		            android:id="@+id/phone_service"
		            android:layout_width="wrap_content"
		            android:layout_height="20dp"
		            android:textColor="@color/black"/>
		        <TextView 
		            android:id="@+id/qq_service"
		            android:layout_width="wrap_content"
		            android:layout_height="20dp"
		            android:textColor="@color/black"/>
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="20dp"
		            android:orientation="horizontal">
		            
		            <TextView 
			            android:id="@+id/game_one"
			            android:layout_width="wrap_content"
			            android:layout_height="20dp"
			            android:textColor="@color/black"/>
		            
		            <TextView 
			            android:id="@+id/game_one_number"
			            android:layout_width="wrap_content"
			            android:layout_height="20dp"
			            android:textColor="@color/deep_blue"/>
		            
		        </LinearLayout>
		        
		         <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="20dp"
		            android:orientation="horizontal">
		            
		            <TextView 
			            android:id="@+id/game_two"
			            android:layout_width="wrap_content"
			            android:layout_height="20dp"
			            android:textColor="@color/black"/>
		            
		            <TextView 
			            android:id="@+id/game_two_number"
			            android:layout_width="wrap_content"
			            android:layout_height="20dp"
			            android:textColor="@color/orage"/>
		            
		        </LinearLayout>
	            
	        </LinearLayout>
	        
            <include
		        android:layout_gravity="center_horizontal" 
		        layout="@layout/myprogressbar"
		        android:layout_width="350dp"
		        android:layout_height="100dp"/>
            
        </FrameLayout>        
    </ScrollView>
    
    <Button 
        android:id="@+id/phone"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="141dp"
        android:layout_height="30dp"
        android:text="@string/findps_phone"
        android:textSize="12sp"
        android:textColor="@color/gray_black"
        android:paddingLeft="20dp"
        android:background="@drawable/phone_style"/>
    

</LinearLayout>
