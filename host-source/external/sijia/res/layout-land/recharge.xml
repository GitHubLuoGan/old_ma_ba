<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_recharge"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/start"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/preview"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/recharge_button_style"
            android:text="@string/back"
            android:textSize="@dimen/textsize"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title_size" />

        <Button
            android:id="@+id/records"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/recharge_button_style"
            android:text="@string/records"
            android:textSize="@dimen/textsize"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <ScrollView
            android:id="@+id/scrollview" 
            android:layout_width="79dp"
            android:background="@drawable/leftbankground"
            android:layout_height="match_parent">                   
	        <LinearLayout
		        android:id="@+id/fragment" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"		       
		        android:orientation="vertical">
		        
	            <Button
	                android:id="@+id/alipay"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/recharge_button_background"
	                android:text="@string/alipay"
	                android:textColor="@color/gray"
	                android:textSize="@dimen/textsize"/>
	            
	            <Button
	                android:id="@+id/unionpay"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/recharge_button_background"
	                android:text="@string/union"
	                android:textColor="@color/gray"
	                android:textSize="@dimen/textsize"/>
	            
	            <Button 
	                android:id="@+id/jiexun"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/recharge_button_background"
	                android:text="@string/jiexun"
	                android:textColor="@color/gray"
	                android:textSize="@dimen/textsize"/>
	            <Button 
	                android:id="@+id/yibao"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/recharge_button_background"
	                android:text="@string/yibao"
	                android:textColor="@color/gray"
	                android:textSize="@dimen/textsize"/>           
	    	</LinearLayout>
    	</ScrollView>
    	
    	<LinearLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:orientation="vertical">
            
    	    <FrameLayout 
		        android:id="@+id/container"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="6"/>
    	    <LinearLayout 
    	        android:layout_width="match_parent"
    	        android:layout_height="0dp"
    	        android:layout_weight="2"
    	        android:gravity="center"
    	        android:orientation="horizontal">
    	        <Button 
			        android:id="@+id/pay_button"
			        android:layout_width="220dp"
			        android:layout_height="50dp"
			        android:text="@string/payment"
			        android:textSize="@dimen/text_title_size"
			        android:textColor="@color/white"
			        android:background="@drawable/payment_button_blue_style"/>
    	        
    	        <LinearLayout
    	            android:id="@+id/tip_button" 
    	            android:layout_width="wrap_content"
    	            android:layout_height="50dp"
    	            android:layout_marginLeft="50dp"
    	            android:gravity="center"
    	            android:orientation="vertical">
					
    	            <TextView 
    	                android:id="@+id/server"
    	                android:layout_height="wrap_content"
    	                android:layout_width="wrap_content"
    	                android:text="@string/server"
    	                android:clickable="true"
    	                android:textSize="18sp"
    	                android:textColor="@color/gray_black"/>
    	            
    	            <TextView 
    	                android:id="@+id/question"
    	                android:clickable="true"
    	                android:layout_height="wrap_content"
    	                android:layout_width="wrap_content"
    	                android:text="@string/question"
    	                android:textSize="18sp"
    	                android:textColor="@color/gray_black"/>    	            
    	            
    	        </LinearLayout>
    	        
    	    </LinearLayout>
    	    
    	</LinearLayout>
	    
        
    </LinearLayout>      
</LinearLayout>