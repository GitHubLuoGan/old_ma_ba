<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/morelinear_one" 
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/morelist_style">
            
            <Button 
                android:layout_height="38dp"
                android:layout_width="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/game_info"
                android:text="@string/game_info"
                android:textColor="@color/game_info"
                android:textSize="20sp"
                android:paddingLeft="20dp"/>
            
            <TextView 
                android:id="@+id/gameinfo"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="13sp"/>
            
        </LinearLayout>
        <include layout="@layout/horizon_line"/>       
        <LinearLayout
            android:id="@+id/morelinear_two" 
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/morelist_style">
            
            <Button 
                android:layout_height="38dp"
                android:layout_width="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/raiders"
                android:text="@string/raiders"
                android:textColor="@color/raiders"
                android:textSize="20sp"
                android:paddingLeft="20dp"/>
            
            <TextView 
                android:id="@+id/raiders"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp"/>
            
        </LinearLayout>
        <include layout="@layout/horizon_line"/>
        <LinearLayout 
            android:id="@+id/morelinear_three"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/morelist_style">
            
            <Button 
                android:layout_height="38dp"
                android:layout_width="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/fine_game"
                android:text="@string/fine_game"
                android:textColor="@color/fine_game"
                android:textSize="20sp"
                android:paddingLeft="20dp"/>
            
            <TextView 
                android:id="@+id/fine_game"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/fine_game"
                android:textSize="13sp"/>            
        </LinearLayout>
        <include layout="@layout/horizon_line"/>
        
        
    </LinearLayout>
    


</ScrollView>
