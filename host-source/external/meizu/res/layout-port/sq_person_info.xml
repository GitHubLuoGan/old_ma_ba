<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="18dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/sq_person_info_topitem_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/sq_person_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff41403e"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/sq_person_info_name_et"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#ff41403e"
            android:textColorHint="#ff9ea4a6"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#e09f9f9f" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/sq_person_info_bottomitem_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/sq_person_info_idcard_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff41403e"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/sq_person_info_idcard_et"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#ff41403e"
            android:textColorHint="#ff9ea4a6"
            android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sq_person_info_error"
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:gravity="center"
        android:textColor="#ffff0000"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/sq_person_info_topitem_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/sq_person_info_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff41403e"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/sq_person_info_nickname_et"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ff41403e"
            android:textColorHint="#ff9ea4a6"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#e09f9f9f" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/sq_person_info_item_bg_normal"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/sq_person_info_gender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff41403e"
            android:textSize="17dp" />

        <RadioGroup
            android:id="@+id/sq_person_info_gender_rg"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sq_person_info_gender_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#ff41403e"
                android:textSize="17dp" />

            <RadioButton
                android:id="@+id/sq_person_info_gender_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#ff41403e"
                android:textSize="17dp" />

            <RadioButton
                android:id="@+id/sq_person_info_gender_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff41403e"
                android:textSize="17dp" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#e09f9f9f" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/sq_person_info_bottomitem_bg_normal"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/sq_person_info_birth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff41403e"
            android:textSize="17dp" />

        <RadioGroup
            android:id="@+id/sq_person_info_birth_rg"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/sq_person_info_birth_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:paddingLeft="0dp"
                android:textColor="#ff41403e"
                android:textSize="17dp" />

            <RadioButton
                android:id="@+id/sq_person_info_birth_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff41403e"
                android:textSize="17dp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
