<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mzw_sdk_login_top_bg"
    android:orientation="vertical" >

    <RelativeLayout
         android:id="@+id/mzw_back"
        android:layout_width="40dip"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true" >

        <ImageView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/mzw_sdk_common_back" />

      
    </RelativeLayout>
  <TextView android:textColor="#666666"
            android:textSize="16sp" 
            android:id="@+id/mzw_topbar_title"
            android:singleLine="true"
            android:layout_toRightOf="@id/mzw_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
</RelativeLayout>