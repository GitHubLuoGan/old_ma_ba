<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/yyh_qiuqiu_bar"
        android:layout_width="207dip"
        android:layout_height="38dip"
        android:layout_centerVertical="true"
        android:background="@drawable/yyh_bar_0"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/yyh_qiuqiu_center"
            android:layout_width="41dip"
            android:layout_height="32dip"
            android:layout_weight="1"
            android:src="@drawable/yyh_qiuqiu_center" />

        <ImageView
            android:id="@+id/yyh_qiuqiu_help"
            android:layout_width="23dip"
            android:layout_height="32dip"
            android:layout_weight="1"
            android:src="@drawable/yyh_qiuqiu_help" />

        
        <RelativeLayout
            android:layout_width="23dip"
            android:layout_height="38dip"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/yyh_qiuqiu_active"
                android:layout_width="23dip"
                android:layout_height="28dip"
                android:layout_centerInParent="true"
                android:src="@drawable/yyh_qiuqiu_active" />

            <ImageView
                android:id="@+id/yyh_qiuqiu_hot"
                android:visibility="gone"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_marginTop="-2dip"
                android:layout_marginRight="2dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/yyh_burn" />
        </RelativeLayout>
        

        <!-- <ImageView
            android:id="@+id/yyh_qiuqiu_active"
            android:layout_width="23dip"
            android:layout_height="28dip"
            android:layout_weight="1"
            android:src="@drawable/yyh_qiuqiu_active" /> -->

        <ImageView
            android:id="@+id/yyh_qiuqiu_tip"
            android:layout_width="25dip"
            android:layout_height="32dip"
            android:layout_weight="1"
            android:src="@drawable/yyh_qiuqiu_tip" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/yyh_qiuqiu_lay"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/yyh_qiuqiu_unread"
            android:layout_width="21dip"
            android:layout_height="21dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/yyh_unread_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="9dip"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>