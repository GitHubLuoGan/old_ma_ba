<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sdk_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/uninitiated"
                    android:textColor="@color/demo_base_info" />

                <TextView
                    android:id="@+id/channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/uninitiated"
                    android:textColor="@color/demo_base_info" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_flow_test"
                style="@style/demo_btn"
                android:text="@string/flow_test"
                android:textColor="@color/demo_btn_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/nologin"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/env_self_check" />

                <Button
                    android:id="@+id/btn_self_check"
                    style="@style/demo_btn"
                    android:text="@string/self_check" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/get_out_sdk_info" />

                <Button
                    android:id="@+id/btn_get_out_sdk_info"
                    style="@style/demo_btn"
                    android:text="@string/get_info" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/login_bg_transparent" />

                <Button
                    android:id="@+id/btn_login_bg_transparent"
                    style="@style/demo_btn"
                    android:text="@string/login" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/login_bg_visible" />

                <Button
                    android:id="@+id/btn_login"
                    style="@style/demo_btn"
                    android:text="@string/login" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/fixed_pay_bg_transparent" />

                <Button
                    android:id="@+id/btn_fixed_pay_bg_transparent"
                    style="@style/demo_btn"
                    android:text="@string/fixed_pay" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/fixed_pay_bg_visible" />

                <Button
                    android:id="@+id/btn_fixed_pay_bg_visible"
                    style="@style/demo_btn"
                    android:text="@string/fixed_pay" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/not_fixed_pay_bg_transparent" />

                <Button
                    android:id="@+id/btn_not_fixed_pay_bg_transparent"
                    style="@style/demo_btn"
                    android:text="@string/not_fixed_pay" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/not_fixed_pay_bg_visible" />

                <Button
                    android:id="@+id/btn_not_fixed_pay_bg_visible"
                    style="@style/demo_btn"
                    android:text="@string/not_fixed_pay" />
            </LinearLayout>
        </LinearLayout>

        <!-- 实名注册和防沉迷 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/real_name_reg_bg_transparent_tip" />

                <Button
                    android:id="@+id/btn_real_name_register_bg_transparent"
                    style="@style/demo_btn"
                    android:text="@string/real_name_reg" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/real_name_reg_bg_visible_tip" />

                <Button
                    android:id="@+id/btn_real_name_register_bg_visible"
                    style="@style/demo_btn"
                    android:text="@string/real_name_reg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/switch_account_bg_transparent" />

                <Button
                    android:id="@+id/btn_switch_account_bg_transparent"
                    style="@style/demo_btn"
                    android:text="@string/switch_account" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/switch_account_bg_visible" />

                <Button
                    android:id="@+id/btn_switch_account"
                    style="@style/demo_btn"
                    android:text="@string/switch_account" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/anti_addiction_query" />

                <Button
                    android:id="@+id/btn_anti_addiction_query"
                    style="@style/demo_btn"
                    android:text="@string/anti_addiction_query" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/bbs_label" />

                <Button
                    android:id="@+id/btn_bbs"
                    style="@style/demo_btn"
                    android:text="@string/bbs_btn" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/bind_phone_num" />

                <Button
                    android:id="@+id/btn_bind"
                    style="@style/demo_btn"
                    android:text="@string/bind" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/quit_game" />

                <Button
                    android:id="@+id/btn_quit"
                    style="@style/demo_btn"
                    android:text="@string/quit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/game_settings" />

                <Button
                    android:id="@+id/btn_show_settings"
                    style="@style/demo_btn"
                    android:text="@string/game_show_settings" />
            </LinearLayout>

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/bbs_post" />

                <Button
                    android:id="@+id/btn_bbs_post"
                    style="@style/demo_btn"
                    android:text="@string/bbs_post" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout style="@style/demo_layout" >

                <TextView
                    style="@style/demo_text"
                    android:text="@string/sdk_update_btn" />

                <Button
                    android:id="@+id/btn_update_test"
                    style="@style/demo_btn"
                    android:text="@string/sdk_update_btn" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>