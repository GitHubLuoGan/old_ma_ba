<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/showLogin"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="登录" />
        
        <Button
            android:id="@+id/switchAccount"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="切换账号" />

        <Button
            android:id="@+id/chargeonce"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="充值一次" />

        <Button
            android:id="@+id/chargeonce1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="充值多次" />

        <Button
            android:id="@+id/showCharge"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="充值" />

        <EditText
            android:id="@+id/price_charge"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:hint="充值数量" />

        <Button
            android:id="@+id/showChargeWithPrice"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="自定义充值" />

        <Button
            android:id="@+id/showFloatView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="显示浮层" />

        <Button
            android:id="@+id/hideFloatView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="隐藏浮层" />

        <Button
            android:id="@+id/setting"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="用户设置" />

        <Button
            android:id="@+id/getChannelId"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="获取渠道id" />
    </LinearLayout>

</ScrollView>