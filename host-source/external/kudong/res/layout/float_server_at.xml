<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body_lay"
    android:layout_width="292dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/float_bg"
    android:baselineAligned="false"
    android:orientation="vertical" >
    
    <!-- header区域 -->
    <include 
        layout="@layout/float_header"
        android:id="@+id/float_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <!-- body区域 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/mg_logo_max_height"
        android:maxWidth="@dimen/mg_logo_max_width"
        android:src="@drawable/mg_logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/float_marin_padding"
        android:layout_marginRight="@dimen/float_marin_padding"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蘑菇游戏客服热诚为您服务~"
            android:textColor="@color/title_color"
            android:textSize="@dimen/float_normal_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服服务时间:每天9:00--21:00"
            android:textColor="@color/title_color"
            android:textSize="@dimen/float_normal_font" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/float_marin_padding"
        android:layout_marginRight="@dimen/float_marin_padding"
        android:background="@color/driver_color"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/float_marin_padding"
        android:layout_marginRight="@dimen/float_marin_padding"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/float_btn_blue_bg" >

            <TextView
                android:id="@+id/float_btn_qq_comm"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/float_btn_height"
                android:gravity="center"
                android:text="@string/float_server_qq_tv"
                android:textColor="#ffffff"
                android:textSize="@dimen/float_normal_two_font" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:adjustViewBounds="true"
                android:maxHeight="24dp"
                android:maxWidth="24dp"
                android:src="@drawable/mg_qq" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/float_btn_blue_bg" >

            <TextView
                android:id="@+id/float_btn_mobile_comm"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/float_btn_height"
                android:gravity="center"
                android:text="@string/float_server_phone_tv"
                android:textColor="#ffffff"
                android:textSize="@dimen/float_normal_two_font" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:adjustViewBounds="true"
                android:maxHeight="24dp"
                android:maxWidth="24dp"
                android:src="@drawable/mg_phone" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/float_version_padding_top_bottom"
            android:gravity="bottom|center_horizontal"
            android:text="@string/mogoo_version"
            android:textColor="@color/descript_color"
            android:textSize="@dimen/float_min_font" />
    </LinearLayout>

</LinearLayout>