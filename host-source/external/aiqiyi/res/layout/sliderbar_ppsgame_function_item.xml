<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliderbar_ppsgame_function_item_body"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="1dip" >

    <RelativeLayout
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/slidebar_ppsgame_function_item_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/dddddddd" />

        <ImageView
            android:id="@+id/sidebar_ppsgame_function_item_update"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/a_plugin_download" />

        <ProgressBar
            android:id="@+id/slidebar_ppsgame_plug_download_pro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/slidebar_ppsgame_function_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:textColor="@color/slidebar_menu_item_color"
        android:textSize="15sp" />

</LinearLayout>