<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="45dip" />
            <gradient
                android:angle="270"
                android:centerColor="#F0F0F0"
                android:centerY="0.75"
                android:endColor="#F0F0F0"
                android:startColor="#F0F0F0" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="45dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/slidebar_progress_experience_end"
                    android:startColor="@color/slidebar_progress_experience_start" />
            </shape>
        </clip>
    </item>

</layer-list>
