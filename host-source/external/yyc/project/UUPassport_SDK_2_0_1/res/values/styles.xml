<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="UnicomTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/generic_content_frame_bg</item>
    </style>

    <style name="Fullscreen" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

    <style name="FullscreenTranslucent" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />

    <style name="ResourceDetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResourceDetailsLabel.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_large_color</item>
    </style>

    <style name="ResourceDetailsLabel.Small">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_small_color</item>
    </style>

    <style name="ResourceStateButton">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="DetailInfoText">
        <item name="android:textColor">@color/text_large_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailDesTitle">
        <item name="android:textColor">@color/text_large_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="PassportDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PassportDialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="DetailDesText">
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">@color/detail_text_color</item>
    </style>


    <style name="FinskyProgressInverse" parent="@android:style/Widget.ProgressBar" >
        <item name="android:indeterminateDrawable">@drawable/load_rotate_drawable</item>
        <item name="android:indeterminateDuration">1500</item>
    </style>

    <style name="BaseText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/content_generic_xmedium_size</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="ContentEntryTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/content_entry_medium_size</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ContentEntrySubtitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/content_entry_small_size</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="TopicTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TopicSubTitleText">
        <item name="android:textColor">@color/text_small_color</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="InfoDetailTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/content_entry_large_size</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    
    <style name="InfoDetailContentText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/content_entry_medium_size</item>
        <item name="android:lineSpacingExtra">@dimen/info_text_line_space</item>
        
    </style>

    
    <style name="NoBackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
	
	<!-- 定义button的长宽 @dimen/button_height-->
    <style name="btn_style">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_height">@dimen/sdk_button_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>
	
    <style name="color_btn_style" parent="@style/btn_style">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="gray_btn_style" parent="@style/btn_style">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- 定义textview的高度和宽度 -->
    <style name="text_base_style">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_space</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
    </style>
    
    <style name="text_style" parent="@style/text_base_style">
        <item name="android:textColor">@color/text_color_second</item>
    </style>
    
    <!-- 定义edittext的高度和宽度 -->
    <style name="edittext_style">
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">@dimen/edittext_margin</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edittext_text_size</item>
    </style>
    
    <style name="spinner_text_style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
    </style>
    
    <style name="progressBar_download">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@color/translucent</item>
        <item name="android:maxHeight">9.0dip</item>
        <item name="android:minHeight">9.0dip</item>
    </style>

</resources>