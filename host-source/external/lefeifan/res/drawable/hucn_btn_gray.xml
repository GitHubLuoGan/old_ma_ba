<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#f2f2f2" android:startColor="#f2f2f2" />

            <stroke android:width="1dip" android:color="#d1d1d1" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <stroke android:width="1dip" android:color="#d1d1d1" />

            <corners android:radius="3dip" />
        </shape></item>

</selector>