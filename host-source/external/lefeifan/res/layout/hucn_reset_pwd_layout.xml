<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HUCNScrollView" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <LinearLayout
            android:id="@+id/hucn_reset_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/hucn_reset_input_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="@dimen/hucn_layout_margin_top"
                android:background="@drawable/hucn_bg_shape_top_corner_no_bottom_line"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/hucn_layout_padding" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_account_blank" />

                <TextView
                    android:id="@+id/hucn_reset_account_ev"
                    style="@style/HUCNText"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:id="@+id/hucn_reset_account_drop_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:background="@drawable/hucn_bg_shape_bottom_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/hucn_layout_padding" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_new_password" />

                <LinearLayout
                    android:id="@+id/hucn_reset_password_ev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" />
            </LinearLayout>

            <TextView
                android:id="@+id/hucn_reset_pwd_tip_tv"
                style="@style/HUCNSmallText"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/hucn_password_tip"
                android:textColor="@color/hucn_text_gray" />

            <Button
                android:id="@+id/hucn_reset_pwd_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="5dp"
                android:background="@drawable/hucn_btn_white"
                android:text="@string/hucn_confirm"
                android:textColor="@drawable/hucn_btn_text_color"
                android:textSize="@dimen/hucn_default_text_size" />

            <TextView
                style="@style/HUCNSmallText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="5dp"
                android:lineSpacingMultiplier="1.2"
                android:padding="5dp"
                android:text="@string/hucn_setting_reset_pwd_tip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hucn_reset_result_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/hucn_reset_submit_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_btn_height"
                android:background="@drawable/hucn_btn_white"
                android:text="@string/hucn_backto_login"
                android:textColor="@drawable/hucn_btn_text_color"
                android:textSize="@dimen/hucn_default_text_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="@dimen/hucn_layout_margin"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="10dp" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_setting_add_secret"
                    android:textSize="@dimen/hucn_default_text_size" />

                <TextView
                    android:id="@+id/hucn_setting_pwd_questions_tv"
                    style="@style/HUCNText"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/hucn_setting_add_questions"
                    android:textColor="@color/hucn_blue"
                    android:textSize="@dimen/hucn_default_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>