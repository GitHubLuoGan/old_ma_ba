<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HUCNScrollView" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/hucn_login_account_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="@dimen/hucn_layout_margin_top"
                android:background="@drawable/hucn_bg_shape_top_corner_no_bottom_line"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/hucn_layout_padding" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_account" />

                <LinearLayout
                    android:id="@+id/hucn_login_account_ev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/hucn_login_account_drop_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_edittext_height"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:background="@drawable/hucn_bg_shape_bottom_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/hucn_layout_padding" >

                <TextView
                    style="@style/HUCNText"
                    android:text="@string/hucn_password" />

                <LinearLayout
                    android:id="@+id/hucn_login_password_ev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <CheckBox
                    android:id="@+id/hucn_save_info_cbx"
                    style="@style/HUCNSmallText"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/hucn_layout_margin"
                    android:button="@drawable/hucn_btn_radion_selected"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="9dp"
                    android:text="@string/hucn_save_password" />

                <Button
                    android:id="@+id/hucn_forget_pwd_tv"
                    style="@style/HUCNSmallText"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="@dimen/hucn_layout_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/hucn_login_forget_pwd"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:paddingTop="6dp"
                    android:text="@string/hucn_forget_password" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/hucn_btn_height"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/hucn_user_register_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/hucn_btn_white"
                    android:text="@string/hucn_register"
                    android:textColor="@drawable/hucn_btn_text_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/hucn_user_login_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/hucn_btn_blue"
                    android:text="@string/hucn_login"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/hucn_qq_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/hucn_text_color"
                android:textSize="@dimen/hucn_small_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hucn_version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/hucn_text_color"
                android:textSize="@dimen/hucn_small_text_size"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/hucn_qq_login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:src="@drawable/hucn_btn_qq"
                    android:textColor="@drawable/hucn_btn_text_color"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/hucn_sina_login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:src="@drawable/hucn_btn_sina"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hucn_layout_margin_top"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/hucn_ad_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hucn_layout_margin"
                android:layout_marginRight="@dimen/hucn_layout_margin"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>