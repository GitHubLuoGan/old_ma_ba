<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HUCNScrollView" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/hucn_recharg_card_gv"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="10dp"
            android:listSelector="@drawable/hucn_btn_selector"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="10dp" >
        </GridView>

        <TextView
            android:id="@+id/hucn_recharge_result_label"
            style="@style/HUCNText"
            android:layout_width="fill_parent"
            android:textColor="@color/hucn_light_gray_"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/hucn_bg_shape_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/hucn_recharge_card_label"
                style="@style/HUCNText"
                android:text="@string/hucn_recharge_num"
                android:textColor="@color/hucn_light_gray_" />

            <EditText
                android:id="@+id/hucn_recharge_card_ed"
                style="@style/HUCNText"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                android:lines="1"
                android:maxLength="23"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/hucn_light_gray_" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/hucn_bg_shape_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/hucn_recharge_pass_label"
                style="@style/HUCNText"
                android:text="@string/hucn_recharge_pass"
                android:textColor="@color/hucn_light_gray_" />

            <EditText
                android:id="@+id/hucn_recharge_pass_ed"
                style="@style/HUCNText"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                android:lines="1"
                android:maxLength="23"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/hucn_light_gray_" />
        </LinearLayout>

        <Button
            android:id="@+id/hucn_recharg_center_submit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hucn_btn_height"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hucn_btn_blue"
            android:orientation="horizontal"
            android:text="@string/hucn_submit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/hucn_default_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hucn_recharg_center_hint"
                style="@style/HUCNSmallText"
                android:text="@string/hucn_recharge_tip"
                android:textColor="@color/hucn_red"
                android:textSize="@dimen/hucn_small_text_size" />

            <TextView
                android:id="@+id/hucn_recharge_hint_tv"
                style="@style/HUCNSmallText"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/hucn_recharg_telephone_hint"
                android:textColor="@color/hucn_light_gray_"
                android:textSize="@dimen/hucn_small_text_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>