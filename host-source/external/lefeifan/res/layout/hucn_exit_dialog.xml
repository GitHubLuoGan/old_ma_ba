<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hucn_bg_white_corners"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/hucn_exit_iv"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/hucn_exit_layout"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/hucn_exit_iv"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hucn_enter_bbs_tv"
                    style="@style/HUCNText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/hucn_selector_gray"
                    android:drawableTop="@drawable/hucn_icon_bbs"
                    android:gravity="center"
                    android:paddingTop="25dp"
                    android:text="@string/hucn_enter_bbs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hucn_join_activity_tv"
                    style="@style/HUCNText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/hucn_selector_gray"
                    android:drawableTop="@drawable/hucn_icon_gift"
                    android:gravity="center"
                    android:paddingTop="25dp"
                    android:text="@string/hucn_join_activitys" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/hucn_exit_split_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/hucn_exit_layout"
            android:background="#e8e0da" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/hucn_exit_split_line"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/hucn_exit_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/hucn_btn_white_no_border_left"
                android:text="@string/hucn_exit_game"
                android:textColor="#5f5f5f"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#e8e0da" />

            <Button
                android:id="@+id/hucn_exit_continue_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/hucn_btn_white_no_border_right"
                android:text="@string/hucn_continue_game"
                android:textColor="#169aff"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>