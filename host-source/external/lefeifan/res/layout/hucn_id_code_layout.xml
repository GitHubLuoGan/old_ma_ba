<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hucn_bg_white_corners"
        android:orientation="vertical" >

        <Button
            android:id="@+id/hucn_idcode_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:drawableRight="@drawable/hucn_btn_close"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" />

        <LinearLayout
            android:id="@+id/hucn_idcode_mobile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:text="@string/hucn_kefu_mobile"
                android:textColor="@color/hucn_blue"
                android:textSize="@dimen/hucn_default_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/hucn_kefu_detail_mobile"
                android:textColor="@color/hucn_text_color"
                android:textSize="@dimen/hucn_default_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hucn_idcode_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hucn_idcode_mobile_layout"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:text="@string/hucn_id_code"
                android:textColor="@color/hucn_blue"
                android:textSize="@dimen/hucn_default_text_size" />

            <TextView
                android:id="@+id/hucn_idcode_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#feffd5"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/hucn_text_color"
                android:textScaleX="1.1"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/hucn_idcode_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hucn_idcode_code_layout"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:text="@string/hucn_id_code_tip"
            android:textColor="@color/hucn_text_color"
            android:textSize="@dimen/hucn_default_text_size" />

        <TextView
            android:id="@+id/hucn_idcode_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hucn_idcode_tip_tv"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:text="@string/hucn_server_time"
            android:textColor="@color/hucn_text_color"
            android:textSize="@dimen/hucn_default_text_size" />


        <Button
            android:id="@+id/hucn_idcode_call_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/hucn_idcode_time_tv"
            android:background="@drawable/hucn_btn_blue_no_border_bottom"
            android:text="@string/hucn_call_mobile"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>