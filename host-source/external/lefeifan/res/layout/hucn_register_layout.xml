<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HUCNScrollView" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hucn_edittext_height"
            android:layout_marginLeft="@dimen/hucn_layout_margin"
            android:layout_marginRight="@dimen/hucn_layout_margin"
            android:layout_marginTop="@dimen/hucn_layout_margin_top"
            android:background="@drawable/hucn_bg_shape_corner"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/hucn_layout_padding" >

            <TextView
                style="@style/HUCNText"
                android:text="@string/hucn_account" />

            <LinearLayout
                android:id="@+id/hucn_reg_user_account_ev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" />
        </LinearLayout>

        <TextView
            android:id="@+id/hucn_reg_account_tip_tv"
            style="@style/HUCNSmallText"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/hucn_layout_margin"
            android:layout_marginRight="@dimen/hucn_layout_margin"
            android:layout_marginTop="6dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="@string/hucn_account_tip"
            android:textColor="@color/hucn_text_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hucn_edittext_height"
            android:layout_marginLeft="@dimen/hucn_layout_margin"
            android:layout_marginRight="@dimen/hucn_layout_margin"
            android:background="@drawable/hucn_bg_shape_corner"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/hucn_layout_padding" >

            <TextView
                style="@style/HUCNText"
                android:text="@string/hucn_password" />

            <LinearLayout
                android:id="@+id/hucn_user_password_ev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:orientation="horizontal" />
        </LinearLayout>

        <TextView
            android:id="@+id/hucn_reg_password_tip_tv"
            style="@style/HUCNSmallText"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/hucn_layout_margin"
            android:layout_marginRight="@dimen/hucn_layout_margin"
            android:layout_marginTop="6dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="@string/hucn_password_tip"
            android:textColor="@color/hucn_text_gray" />

        <Button
            android:id="@+id/hucn_user_register_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hucn_btn_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hucn_btn_blue"
            android:text="@string/hucn_register_now"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/hucn_default_text_size" />
    </LinearLayout>

</ScrollView>