<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HUCNBg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/hucn_download_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:contentDescription="@null"
        android:src="@drawable/hucn_logo_bg"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/hucn_download_scrollview"
        style="@style/HUCNScrollView" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp" 
            android:paddingBottom="10dp" 
            android:paddingLeft="5dp" 
            android:paddingRight="5dp" 
            
            >

            <TextView
                android:id="@+id/hucn_downloading_count_tv"
                style="@style/HUCNText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="12dp" />

            <View
                android:id="@+id/hucn_download_line1"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2" />

            <LinearLayout
                android:id="@+id/hucn_downloading_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hucn_download_count_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/hucn_downloaded_count_tv"
                    style="@style/HUCNText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" />

                <TextView
                    android:id="@+id/hucn_downloaded_count_clean_tv"
                    style="@style/HUCNText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hucn_clean_record"
                    android:textColor="@color/hucn_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/hucn_download_line2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2" />

            <LinearLayout
                android:id="@+id/hucn_downloaded_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>