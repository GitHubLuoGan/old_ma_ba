<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:background="@drawable/icon_gift_list_bg_style"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/icon_gift_list_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_default"/>
    
    <TextView 
        android:id="@+id/icon_gift_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignTop="@+id/icon_gift_list_image"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/icon_gift_list_image"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"/>
    
    <TextView 
        android:id="@+id/icon_gift_list_se_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/icon_gift_list_se_text"
        android:textSize="13sp"
        android:layout_alignLeft="@+id/icon_gift_list_name"
        android:layout_below="@+id/icon_gift_list_name"
        android:layout_marginTop="2dp"/>
    
    <TextView 
        android:id="@+id/icon_gift_list_th_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/icon_gift_list_th_text"
        android:textSize="13sp"
        android:layout_alignLeft="@+id/icon_gift_list_name"
        android:layout_below="@+id/icon_gift_list_se_text"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="100dp"
        android:layout_marginTop="2dp"/>
    
    <Button 
        android:id="@+id/icon_gift_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_gift_list_button_bg"/>
    

</RelativeLayout>
