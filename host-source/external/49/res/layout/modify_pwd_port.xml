<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button 
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/backbtn_port_style"/>
    
    <LinearLayout 
        android:layout_width="300dp"
        android:layout_height="234dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/login_bg">
        
        <LinearLayout
            android:id="@+id/input" 
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_m_edit_bg">
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="40dp">
                
                <ImageView
                    android:id="@+id/user_icon" 
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/login_user"/>
                <EditText
                    android:id="@+id/edit_user"
                    android:layout_toRightOf="@+id/user_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:hint="@string/modify_user"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@null"/>                
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e6e9"/>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="39dp">
                
                <ImageView
                    android:id="@+id/pwd_icon" 
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/login_pwd"/>
                <EditText
                    android:id="@+id/edit_pwd"
                    android:layout_toRightOf="@+id/pwd_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:maxLength="16"
                    android:hint="@string/modify_old_pwd"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:background="@null"/>
                
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e6e9"/>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="39dp">
                
                <ImageView
                    android:id="@+id/pwd_new_icon" 
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/login_pwd"/>
                <EditText
                    android:id="@+id/edit_new_pwd"
                    android:layout_toRightOf="@+id/pwd_new_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:hint="@string/modify_new_pwd"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:digits="@string/xianzhi"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:background="@null"/>               
            </RelativeLayout>
            
        </LinearLayout>
        
        <Button 
            android:id="@+id/modify"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/modify_button"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/eighteen"
            android:textColor="@color/white"
            android:background="@drawable/blue_btn_style"/>                    
    </LinearLayout>        
</RelativeLayout>
