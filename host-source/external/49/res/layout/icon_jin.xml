<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icon_gift_list_default"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/icon_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/icon_gift_list_default"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icon_gift_se_cl"
            android:gravity="center">
            
            <ImageView 
                android:layout_width="89dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_meun_jin"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:background="@drawable/icon_gift_se"
            android:gravity="center">
            
        </LinearLayout>
        
    </LinearLayout>
    
    <include 
        layout="@layout/myprogressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <ListView 
        android:id="@+id/icon_jin_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none"/>
    

</LinearLayout>
