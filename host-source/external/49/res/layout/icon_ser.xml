<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/myprogressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <TextView 
        android:id="@+id/icon_ser_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    
    <TextView 
        android:id="@+id/icon_ser_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/icon_orage"/>
    
    <TextView 
        android:id="@+id/icon_ser_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    
    <TextView 
        android:id="@+id/icon_ser_qqun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    
    <Button 
        android:id="@+id/icon_ser_button"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:background="@drawable/icon_call_phone_style"/>   
</LinearLayout>
