<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button 
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="74dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/backbtn_style"/>
    
    <LinearLayout 
        android:layout_width="350dp"
        android:layout_height="273dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/login_bg">
        
        <TextView 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/find_tips"
            android:layout_marginTop="70dp"
            android:textColor="@color/blue_d"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e6e9"/>
        <RelativeLayout 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            
            <Button 
                android:id="@+id/telephone"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/telephone_style"
                android:layout_alignParentLeft="true"/>
            <Button 
                android:id="@+id/home_phone"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/home_phone_style"
                android:layout_toRightOf="@+id/telephone"/>
            
            <Button 
                android:id="@+id/qq"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/qq_style"
                android:layout_alignParentRight="true"/>
            
        </RelativeLayout>       
    </LinearLayout>
</RelativeLayout>
