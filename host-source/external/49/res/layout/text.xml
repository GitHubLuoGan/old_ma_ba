<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:background="@drawable/point_bg"
    android:layout_gravity="center"
    android:orientation="horizontal" >
    
    <Button 
        android:id="@+id/button1"
        style="@style/Sj_MyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/point_jin_style"/>
    
    <Button 
        android:id="@+id/button2"
        style="@style/Sj_MyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/point_gift_style"/>
    
    <Button 
        android:id="@+id/button3"
        style="@style/Sj_MyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/point_ac_style"/>
    
    <Button 
        android:id="@+id/button4"
        style="@style/Sj_MyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/point_ser_style"/>
    <LinearLayout
        android:id="@+id/orange" 
        android:layout_width="47dp"
        android:layout_height="41dp"
        android:background="@drawable/client_bg"
        android:orientation="horizontal"
        android:gravity="center">
        
        <Button 
	        android:id="@+id/button5"
	        style="@style/Sj_MyButton"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:background="@drawable/point_client_style"/>
        
    </LinearLayout>    
</LinearLayout>
