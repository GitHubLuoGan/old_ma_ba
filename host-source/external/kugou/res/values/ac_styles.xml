<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AC_SdkBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AC_SdkTheme" parent="AC_SdkBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AC_KYTheme.Widget.RadioButton.OnlineGame" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/ac_download_tab_text_color</item>
    </style>

    <style name="ac_KYTheme" parent="android:Theme.Light"></style>

    <style name="ac_KYTheme.Divider">
        <item name="android:background">@color/ac_common_item_divider</item>
    </style>

    <style name="ac_KYTheme.Divider.Horizontal" parent="ac_KYTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="ac_KYTheme.Divider.Vertical" parent="ac_KYTheme.Divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ac_KYTheme.Widget.RadioButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_margin">0.0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dip</item>
        <item name="android:textSize">@dimen/ac_common_large</item>
    </style>
    
    <style name="ac_KYTheme.Widget.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
</resources>