<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ac_game_detail_down_bg"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:orientation="horizontal" >
        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >
            <LinearLayout
		        android:id="@+id/layout_not_downloading"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		        <TextView 
		            android:id="@+id/ll_install"
		    	    android:layout_marginLeft="45dip"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal"
					android:gravity="center"
		            android:background="@drawable/ac_selector_btn_bg_red">
				</TextView>
			</LinearLayout>
			<LinearLayout
		        android:id="@+id/layout_downloading"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical"
		        android:visibility="gone"
		        android:orientation="horizontal">
		        <ImageView
		            android:id="@+id/img_delete_downloading"
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_marginRight="15dp"
		            android:minHeight="@dimen/ac_common_icon_width_and_height"
		            android:minWidth="@dimen/ac_common_icon_width_and_height"
		            android:scaleType="center"
		            android:background="@drawable/ac_comm_button_bg"
		            android:src="@drawable/ac_download_delete" />
		        <FrameLayout 
		            android:layout_width="match_parent"
		            android:layout_height="match_parent">
		            <TextView
		                android:id="@+id/tv_bar_bg"
				        android:background="@drawable/ac_but_bg_gray"
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"/>
		            <ProgressBar
		                android:id="@+id/downloading_progressbar"
		                style="?android:attr/progressBarStyleHorizontal"
		                android:layout_width="fill_parent"
		                android:layout_height="match_parent"
		                android:max="100"
		                android:progressDrawable="@drawable/ac_download_seekbar_green_style" 
		                android:progress="30" />
	            </FrameLayout>
	        </LinearLayout>
            <TextView
                android:id="@+id/downloading_intro"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="asdfasdf"
                android:gravity="center"
                android:visibility="gone" 
                android:textColor="@color/ac_common_gray_lighter"
                android:textSize="@dimen/ac_common_medium" />
        </FrameLayout>
    <ImageView
		android:id="@+id/img_share"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginLeft="15dp"
        android:scaleType="center"
        android:src="@drawable/ac_share"
        android:background="@drawable/ac_comm_button_bg" />
    </LinearLayout>
    <com.kuyou.appcenter.widgets.MagicButton
	            android:id="@+id/downloading_btn"
	            android:layout_width="50dip"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="下载"
	            android:gravity="center_horizontal"
	            android:drawableLeft="@drawable/ac_game_detail_down_photo"
	            android:textColor="@android:color/white"
	            android:textSize="@dimen/ac_common_medium" />
</FrameLayout>