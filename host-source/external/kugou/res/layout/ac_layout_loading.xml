<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:minHeight="@dimen/ac_common_item_height"
    android:orientation="vertical" >

    <com.kuyou.appcenter.widgets.CustomProgressBar
        android:id="@+id/progress_loading_bar"
        android:src="@drawable/ac_loading_medium_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_loading_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ac_selector_btn_common"
        android:padding="10dip"
        android:text="正在加载……"
        android:textColor="@color/ac_common_gray_darker"
        android:textSize="@dimen/ac_common_small" />

</LinearLayout>