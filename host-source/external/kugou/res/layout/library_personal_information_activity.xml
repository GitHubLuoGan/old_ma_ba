<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_weight="1"
        layout="@layout/library_common_title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:layout_weight="1"
            layout="@layout/library_common_tips_bar" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/library_personal_information_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/library_common_background" >

        <LinearLayout
            android:id="@+id/library_personal_information_scrollview_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/library_common_background"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/library_personal_information_modify_photo"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/library_personal_information_background"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/library_user_center_head_photo_one"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="16dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/library_person_photo" />

                <ImageView
                    android:id="@+id/library_personal_information_head_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/library_person_photo" />

                <ImageView
                    android:id="@+id/library_personal_information_modify_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/library_personal_information_background_modify" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/library_personal_information_account"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:singleLine="true" >

                <TextView
                    android:id="@+id/library_personal_information_account_textview"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="帐       号 :"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/library_personal_information_account_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/library_personal_information_account_textview"
                    android:layout_toRightOf="@+id/library_personal_information_account_textview"
                    android:gravity="center_vertical"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/library_user_center_button_space_line" />

            <RelativeLayout
                android:id="@+id/library_personal_information_sign"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dp" >

                <TextView
                    android:id="@+id/library_personal_information_sign_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:paddingLeft="10dp"
                    android:text="个性签名:"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/library_personal_information_sign_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/library_personal_information_sign_textview"
                    android:layout_toRightOf="@+id/library_personal_information_sign_textview"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:lines="2"
                    android:minHeight="50dp"
                    android:paddingRight="5dip"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/library_user_center_button_space_line" />

            <RelativeLayout
                android:id="@+id/library_personal_information_sex"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/library_personal_information_sex_textview"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="性       别 :"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/library_personal_information_sex_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/library_personal_information_sex_textview"
                    android:layout_toRightOf="@+id/library_personal_information_sex_textview"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/library_personal_information_sex_photo"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/library_personal_information_boy" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/library_user_center_button_space_line" />

            <RelativeLayout
                android:id="@+id/library_personal_information_age"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/library_personal_information_age_textview"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="出生年月:"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/library_personal_information_age_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/library_personal_information_age_textview"
                    android:layout_toRightOf="@+id/library_personal_information_age_textview"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/library_personal_information_age_photo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/library_common_button_photo_pressed" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/library_user_center_button_space_line" />

            <RelativeLayout
                android:id="@+id/library_personal_information_age_numbers"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/library_personal_information_age_numbers_textview"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="年       龄:"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/library_personal_information_age_numbers_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/library_personal_information_age_numbers_textview"
                    android:layout_toRightOf="@+id/library_personal_information_age_numbers_textview"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#ff341234"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/library_user_center_button_space_line" />

            <RelativeLayout
                android:id="@+id/library_personal_information_address"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/library_personal_information_address_textview"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text=" 所 在 地:"
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/library_personal_information_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/library_personal_information_address_textview"
                    android:layout_toRightOf="@+id/library_personal_information_address_textview"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#ff341234"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/library_personal_information_address_photo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/library_common_button_photo_pressed" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/library_user_center_button_space_line" />

            <LinearLayout
                android:id="@+id/library_personal_information_save"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/library_personal_information_save_button"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/library_user_center_activity_account_button_selector"
                    android:text="保存"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/library_personal_information_cancel_button"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/library_user_center_changer_account_button_selector"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.kugou.pay.android.widget.LoadingView
        android:id="@+id/library_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/library_common_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/library_user_center_button_space_line" />

    <include
        android:layout_weight="1"
        layout="@layout/library_bottom_bar" />

</LinearLayout>